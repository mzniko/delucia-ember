<h1>{{#link-to 'status'}}Status{{/link-to}}</h1>

{{#if addingNewCustomer}}
  <label for="new_name">Name</label>
  {{input type ='text' value=controller.new_name id='new_name'}}
  <label for="new_email">Email</label>
  {{input type ='text' value=controller.new_email id='new_email'}}
  <button id="save_new_customer" {{action 'saveNewCustomer'}} >Save</button>
  <button id="cancel_new_customer"{{action 'cancelNewCustomer'}}>Cancel</button>
{{else}}
  <button id="new_customer" {{action 'addNewCustomer'}}>New Customer</button>
{{/if}}

{{outlet}}

