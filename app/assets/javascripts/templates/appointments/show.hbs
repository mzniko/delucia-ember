{{#if isEditing}}
  {{partial 'appointments/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
  <button id="cancel_customer_edit"{{action 'cancelEditing'}}>Cancel</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}

<ul class="appointments_list">
  <li>Customer: {{customer_id}}</li>
  <li>Day: {{day}}</li>
  <li>Notes: {{notes}}</li>
</ul>

